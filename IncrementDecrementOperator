//   Increment operator

    int a = 5;
	a = a + 1; // 5 + 1 = 6 = a
	a++; // 6+1 = a = 7;
	++a; // 7+1 = 8 = a;
	// a= a + 1 , a++, ++a  all are same.
	
	printf("%d", a); // 8
	

	//  Decrement Operator
	a = a - 1; // a = 8 - 1 = 7 = a;
	a--; // a = 7 - 1 = 6 = a;
	--a; // a= 6 - 1= 5 = q;
	
	printf("%d", a);
#include <stdio.h>
int main () {
    //pre decrement
    int a , b;
	
	a = 5;

	b = ++a; //b = a + 1 = a; => b = a+1; a = a+ 1;
	
	printf("\na: %d",a);
	printf("\nb: %d",b);   
	//post decrement
	a = 5;
	b = a++;// b = a = a + 1 => b = a; a = a + 1
	
	printf("\na: %d", a);
	printf("\nb: %d", b);
	
    return 0;
}

 int a = 6, b = 8,c, d;
    
    c = ++a + b++;  // c = 7 + 8 = 15
    
    printf("%d", c); // ans 15
    //a = 7 , b = 9 
    
    c = --a + b--; // c = 6 + 9 = 15
    
    printf("\n%d", c);
    
    //c = 15 a = 6 b = 8
    
    d = c++ - --a + ++b; // d = 15 - 5 + 9 = 19
    
    printf("\n%d", d);
