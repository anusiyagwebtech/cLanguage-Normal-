//   Increment operator

    int a = 5;
	a = a + 1; // 5 + 1 = 6 = a
	a++; // 6+1 = a = 7;
	++a; // 7+1 = 8 = a;
	// a= a + 1 , a++, ++a  all are same.
	
	printf("%d", a); // 8
	

	//  Decrement Operator
	a = a - 1; // a = 8 - 1 = 7 = a;
	a--; // a = 7 - 1 = 6 = a;
	--a; // a= 6 - 1= 5 = q;
	
	printf("%d", a);
#include <stdio.h>
int main () {
    //pre decrement
    int a , b;
	
	a = 5;

	b = ++a; //b = a + 1 = a; => b = a+1; a = a+ 1;
	
	printf("\na: %d",a);
	printf("\nb: %d",b);   
	//post decrement
	a = 5;
	b = a++;// b = a = a + 1 => b = a; a = a + 1
	
	printf("\na: %d", a);
	printf("\nb: %d", b);
	
    return 0;
}
